doctype html
html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        script(src='https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js')
        link(href='https://cdn.bootcss.com/twitter-bootstrap/4.2.1/css/bootstrap.min.css', rel='stylesheet')
        script(src='https://cdn.bootcss.com/twitter-bootstrap/4.2.1/js/bootstrap.min.js')
        script(src='https://cdn.bootcss.com/vue/2.5.21/vue.min.js')
        link(rel='stylesheet', href='https://unpkg.com/element-ui/lib/theme-chalk/index.css')
        script(src='https://unpkg.com/element-ui/lib/index.js')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        #app
            section
                #img0
                    .sticky
                        figure.image_0(:style="pic_opa('#img0')")
                        .section-content
                            .container.content-text0.large-12
                                h2
                                    strong #{ p1_h1 }
                                p #{ p1_h2 }
            section
                #img1
                    figure.image_1(:style="pic_opa('#img1')")
                    .section-content
                        .container.content-text1.large-12
                            h2
                                strong(style='color:#fbfbfd;') #{ p2_stong_header }
                                | #{ p2_header }
                            p #{ p2_content }
            section
                #img2
                    figure.image_2(:style="pic_opa('#img2')")
                    .section-content
                        .container.content-text2.large-12
                            h2
                                | #{ p3_header }
                                strong(style='color:#fbfbfd;') #{ p3_strong_header }
                            p #{ p3_content }
        script(src='/javascripts/script.js')
